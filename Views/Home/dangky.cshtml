
@{
    ViewBag.Title = "dangky";
    Layout = null;
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Areas/Quantri/Content/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Areas/Quantri/Content/js/jquery-3.3.1.min.js"></script>
    <script src="~/Areas/Quantri/Content/js/jquery.js"></script>
</head>
<body>
    <div class="container-fluid bg-dark" style="height: 100vh; display:flex">
        <div class="card container-fluid " style="margin:auto;width:50%">
            <div class="card-header">Đăng nhập</div>
            <div class="card-body">
                <form>
                    <div class="form-group">
                        <label for="id">ID</label>
                        <input type="text" id="id" name="id" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label for="matkhau">Mật khẩu</label>
                        <input type="password" id="matkhau" name="matkhau" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label for="matkhau1"> Nhập lại mật khẩu</label>
                        <input type="password" id="matkhau1" name="matkhau" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label for="ten"> Tên</label>
                        <input type="text" id="ten" name="ten" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label for="ngaysinh"> Ngày sinh</label>
                        <input type="date" id="ngaysinh" name="matkhau"  class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label for="diachi"> Địa chỉ</label>
                        <input type="text" id="diachi" name="matkhau" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <input type="button" id="dangky" class="form-control btn btn-primary" value="Đăng ký" />
                    </div>
                </form>
                <p>@Html.ActionLink("Đăng nhập", "login")</p> 
            </div>
        </div>

    </div>
    <script>
        
        $("#dangky").click(function () {
            $.ajax({
                url: "/home/dangky",
                type: "POST",
                data: { id: $("#id").val(), matkhau: $("#matkhau").val(), matkhau1: $("#matkhau1").val(), ten: $("#ten").val(), ngaysinh:  $("#ngaysinh").val(), diachi: $("#diachi").val() },
                success: function (rs) {
                    alert(rs);
                }
            })
       })
    </script>
</body>
</html>


