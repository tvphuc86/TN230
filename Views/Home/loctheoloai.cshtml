@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model PagedList.IPagedList<thietbiphatsang.tb_ThietBi>
@using PagedList.Mvc

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4 product-wap rounded-0">
                <div class="card rounded-0">
                    <img class="card-img rounded-0 img-fluid" src="~/Areas/Quantri/Content/img/sanpham/@item.tb_AnhThietBi.FirstOrDefault().strAnh" style="width:300px;height:300px">
                    <div class="card-img-overlay rounded-0 product-overlay d-flex align-items-center justify-content-center">
                        <ul class="list-unstyled">
                            <li><a class="btn btn-success text-white mt-2" href="/home/thongtin?masp=@item.strMaThietBi"><i class="far fa-eye"></i></a></li>
                            <li><a class="btn btn-success text-white mt-2" href="#" onclick="AddToCart('@item.strMaThietBi')"><i class="fas fa-cart-plus"></i></a></li>
                        </ul>
                    </div>
                </div>
                <div class="card-body">
                    <a href="shop-single.html" class="h3 text-decoration-none">@item.strTenThietBi</a>
                    <ul class="w-100 list-unstyled d-flex justify-content-between mb-0">
                        <li class="pt-2">
                            <span class="product-color-dot color-dot-red float-left rounded-circle ml-1"></span>
                            <span class="product-color-dot color-dot-blue float-left rounded-circle ml-1"></span>
                            <span class="product-color-dot color-dot-black float-left rounded-circle ml-1"></span>
                            <span class="product-color-dot color-dot-light float-left rounded-circle ml-1"></span>
                            <span class="product-color-dot color-dot-green float-left rounded-circle ml-1"></span>
                        </li>
                    </ul>
                    <p class="text-center mb-0">@item.floatGia VNĐ</p>
                </div>
            </div>
        </div>
    }


</div>

<div div="row">
    <ul class="papage-item pagination pull-right text-center text-black">
        @Html.PagedListPager(Model, Page => Url.Action("loctheoloai", new { Page, maloai=Model.FirstOrDefault().strMaLoai}))
    </ul>
</div>

