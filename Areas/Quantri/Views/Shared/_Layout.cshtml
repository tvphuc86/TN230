@{
    ViewBag.Title = "Trang chủ";
}

<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1">
    <title>YourLight</title>
    <!-- Bootstrap CSS -->
    <link href="~/Areas/Quantri/Content/css/bootstrap.min.css" rel="stylesheet" />
    <!----css3---->
    <link href="~/Areas/Quantri/Content/css/custom.css" rel="stylesheet" />

    <!--google fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
    <script src="~/Areas/Quantri/Content/js/jquery-3.3.1.slim.min.js"></script>
    <script src="~/Areas/Quantri/Content/js/jquery-3.3.1.min.js"></script>



    <!--google material icon-->
    <link href="https://fonts.googleapis.com/css2?family=Material+Icons" rel="stylesheet">

</head>
<body>



    <div class="wrapper">

        <div class="body-overlay"></div>

        <!-------sidebar--design------------>

        <div id="sidebar">
            <div class="sidebar-header">
                <h3><img src="~/Areas/Quantri/Content/img/logo.png" class="img-fluid" /><span><span class="text-dark">Your</span><span style="color:orange;">Light</span></span></h3>
            </div>
            <ul class="list-unstyled component m-0">
                <li class="">
                    <a href="trangchu" class="dashboard"><i class="material-icons">dashboard</i>Trang quản trị</a>
                </li>
                <li class="dropdown">
                    <a href="#homeSubmenu1" data-toggle="collapse" aria-expanded="false"
                       class="dropdown-toggle">
                        <i class="material-icons">category</i>Sản phẩm
                    </a>
                    <ul class="collapse list-unstyled menu" id="homeSubmenu1">
                        <li><a href="/quantri/quantri/loaisanpham">Danh sách loại sản phẩm</a></li>
                        <li><a href="/quantri/quantri/sanpham">Danh sách sản phẩm</a></li>
                        <li><a href="/quantri/quantri/nsx">Nhà sản xuất</a></li>
                    </ul>
                </li>

                <li class="dropdown">
                    <a href="#homeSubmenu2" data-toggle="collapse" aria-expanded="false"
                       class="dropdown-toggle">
                        <i class="material-icons">recent_actors</i>Khách hàng
                    </a>
                    <ul class="collapse list-unstyled menu" id="homeSubmenu2">
                        <li><a href="#">Danh sách</a></li>
                        <li><a href="#">Khách hàng VIP</a></li>
                    </ul>
                </li>

                <li class="dropdown">
                    <a href="#homeSubmenu3" data-toggle="collapse" aria-expanded="false"
                       class="dropdown-toggle">
                        <i class="material-icons">savings</i>Khuyến mãi
                    </a>
                    <ul class="collapse list-unstyled menu" id="homeSubmenu3">
                        <li><a href="/quantri/quantri/khuyenmai">Danh sách</a></li>
                        <li><a href="/quantri/quantri/spkm">Sản phẩm khuyến mãi</a></li>
                    </ul>
                </li>

                <li class="dropdown">
                    <a href="#homeSubmenu4" data-toggle="collapse" aria-expanded="false"
                       class="dropdown-toggle">
                        <i class="material-icons">list_alt</i>Đơn hàng
                    </a>
                    <ul class="collapse list-unstyled menu" id="homeSubmenu4">
                        <li><a href="#">Duyệt đơn</a></li>
                        <li><a href="#">Đơn lỗi</a></li>
                    </ul>
                </li>
            </ul>
        </div>

        <!-------sidebar--design- close----------->
        <!-------page-content start----------->

        <div id="content">

            <!------top-navbar-start----------->

            <div class="top-navbar">
                <div class="xd-topbar">
                    <div class="row">
                        <div class="col-2 col-md-1 col-lg-1 order-2 order-md-1 align-self-center">
                            <div class="xp-menubar">
                                <span class="material-icons text-white">signal_cellular_alt</span>
                            </div>
                        </div>

                        <div class="col-md-5 col-lg-3 order-3 order-md-2">
                            <div class="xp-searchbar">
                                <form>
                                    <div class="input-group">
                                        <input type="search" class="form-control"
                                               placeholder="Search">
                                        <div class="input-group-append">
                                            <button class="btn" type="submit" id="button-addon2">
                                                Tìm
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>


                        <div class="col-10 col-md-6 col-lg-8 order-1 order-md-3">
                            <div class="xp-profilebar text-right">
                                <nav class="navbar p-0">
                                    <ul class="nav navbar-nav flex-row ml-auto">
                                        <li class="dropdown nav-item">
                                            <a class="nav-link" href="#" data-toggle="dropdown">

                                                <span>@Session["Username"]</span>
                                            </a>
                                            <ul class="dropdown-menu small-menu">
                                                <li>
                                                    <a href="#">
                                                        <span class="material-icons">person_outline</span>
                                                        Hồ sơ
                                                    </a>
                                                </li>
                                                <li>
                                                    <a href="/home">
                                                        <span class="material-icons">logout</span>
                                                        Đăng xuất
                                                    </a>
                                                </li>

                                            </ul>
                                        </li>


                                    </ul>
                                </nav>
                            </div>
                        </div>

                    </div>

                    <div class="xp-breadcrumbbar text-center">
                        <h4 class="page-title">Trang quản trị</h4>
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#">Yourlight</a></li>
                        </ol>
                    </div>


                </div>
            </div>
            <!------top-navbar-end----------->
            <!------main-content-start----------->

            <div class="main-content">





                @RenderBody()












            </div>
        </div>
    </div>


    <!------main-content-end----------->
    <!----footer-design------------->

    <footer class="footer">
        <div class="container-fluid">
            <div class="footer-in">
                <p class="mb-0">&copy 2021 Vishweb Design . All Rights Reserved.</p>
            </div>
        </div>
    </footer>


    <!-------complete html----------->
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="~/Areas/Quantri/Content/js/popper.min.js"></script>
    <script src="~/Areas/Quantri/Content/js/bootstrap.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $(".xp-menubar").on('click', function () {
                $("#sidebar").toggleClass('active');
                $("#content").toggleClass('active');
            });

            $('.xp-menubar,.body-overlay').on('click', function () {
                $("#sidebar,.body-overlay").toggleClass('show-nav');
            });

        });
    </script>





</body>

</html>


